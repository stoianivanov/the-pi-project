        </activity>
        <activity
            android:name=".speed.GameSpeed5"
            android:label="@string/title_activity_game_speed5" >
        </activity>
        <activity
            android:name=".speed.GameSpeed10"
            android:label="@string/title_activity_game_speed10" >
        </activity>
        <activity
            android:name="com.example.logic.NumbersExample"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.logic.LogicFinalActivity"
            android:label="@string/title_activity_logic_final" >
        </activity>
    </application>

</manifest>
