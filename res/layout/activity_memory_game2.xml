<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/memoryImage1Game2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageView
            android:id="@+id/memoryImage2Game2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageView
            android:id="@+id/memoryImage3Game2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageView
            android:id="@+id/memoryImage4Game2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/memory_game_2_default_a" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.48" >

        <ImageButton
            android:id="@+id/memoryGame2Button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="118dp"
            android:layout_marginLeft="99dp"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageButton
            android:id="@+id/memoryGame2Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/memoryGame2Button3"
            android:layout_alignTop="@+id/memoryGame2Button4"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageButton
            android:id="@+id/memoryGame2Button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/memoryGame2Button1"
            android:layout_marginLeft="46dp"
            android:layout_toRightOf="@+id/memoryGame2Button1"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageButton
            android:id="@+id/memoryGame2Button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/memoryGame2Button4"
            android:layout_alignLeft="@+id/memoryGame2Button4"
            android:layout_marginBottom="37dp"
            android:src="@drawable/memory_game_2_default_a" />

        <ImageView
            android:id="@+id/imageButtonGoGame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/button_go" />
 
    </RelativeLayout>

</LinearLayout>