<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logic_layout"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/numericProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Problem"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="@string/sequence_enter_answer"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textColorHint="@android:color/white"
        android:textSize="27sp" />

    <ImageButton
        android:id="@+id/answerNumericalSeries"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="460dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/okbutton"
        android:text="GO!" />

    <Button
        android:id="@+id/buttonAdd1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="270dp"
        android:background="#99FFFFFF"
        android:text="1"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="270dp"
        android:background="#99FFFFFF"
        android:text="2"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="270dp"
        android:background="#99FFFFFF"
        android:text="3"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="270dp"
        android:background="#99FFFFFF"
        android:text="C"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="370dp"
        android:background="#99FFFFFF"
        android:text="4"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="370dp"
        android:background="#99FFFFFF"
        android:text="5"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="370dp"
        android:background="#99FFFFFF"
        android:text="6"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="470dp"
        android:background="#99FFFFFF"
        android:text="7"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="470dp"
        android:background="#99FFFFFF"
        android:text="8"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="470dp"
        android:background="#99FFFFFF"
        android:text="9"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAddMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="570dp"
        android:background="#99FFFFFF"
        android:text="-"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="570dp"
        android:background="#99FFFFFF"
        android:text="0"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAddPeriod"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="570dp"
        android:background="#99FFFFFF"
        android:text="."
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</RelativeLayout>